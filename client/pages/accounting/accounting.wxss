@import "../common/ui.wxss";

input,.picker {
  width: 60%;
  height: 35px;
}

#container {
  margin: 20px;
  border-radius: 10px;
  position: relative;
  padding: 5px;
  z-index: 1;
  display: flex;
}

#container::after {
  content: "";
  position: absolute;
  z-index: -1;
  background-color: inherit;
  width: 100%;
  height: 100%;
  right: -8px;
  bottom: -8px;
  opacity: 0.2;
  transform: scale(1, 1);
}