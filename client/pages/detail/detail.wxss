@import "../common/ui.wxss";

#container {
  margin: 20px;
  border-radius: 6px;
  position: relative;
  padding: 5px;
  z-index: 1;
  display: flex;
}

#container::after {
  content: "";
  position: absolute;
  z-index: -1;
  background-color: inherit;
  width: 100%;
  height: 100%;
  right: -8px;
  bottom: -8px;
  border-radius: 5px;
  opacity: 0.2;
  transform: scale(1, 1);
}

.item-row {
	width:auto;
	justify-content: space-between;
	margin-right:10px;
}

input, .input {
	padding-left:10px;
}

.text {
	font-size:22px;
}

.indicator {
  height: 35px;
  border: 1px;
}
